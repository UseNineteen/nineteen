#viewer {
  flex: 1;
  margin: 0;
  position: relative;

  #group-column {
    appearance: none;
    background: none;
    border: none;
    color: $trout;
    font-size: 16px;
    font-weight: bold;
    margin-right: 20px;
    outline: none;
    padding: 0;

    &:after {
      content: "\25BE";
      padding-left: 0.2em;
    }

  }

  .viewer-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    display: flex;
    flex-direction: column;
  }

  #zoom-controls {
    position: fixed;
    bottom: 40px;
    right: 40px;

    button {
      display: block;
      background-color: white;
      border: 1px solid #A1A7AD;
      border-radius: 5px;
      box-shadow: 0 2px 4px rgba(black, 0.1);
      box-sizing: border-box;
      height: 32px;
      margin-bottom: 6px;
      overflow: hidden;
      outline: none;
      padding: 0 0 0 32px;
      position: relative;
      width: 32px;

      &:hover, &:focus {
        background-color: $lightgray;
      }

      &:before {
        background-position: center;
        background-repeat: no-repeat;
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
      }

      &:disabled:before {
        opacity: 0.3;
      }

      &.zoom-in:before {
        background-image: url('zoom-plus.svg');
      }

      &.zoom-out:before {
        background-image: url('zoom-minus.svg');
      }

      &.zoom-fit:before {
        background-image: url('zoom-fit.svg');
      }
    }
  }

  .visualizer {
    flex: 1 1 auto;
    overflow: auto;
    overflow-x: hidden;
    position: relative;
  }

  .wrapper {
    // display: flex;
    // position: relative;
    // width: 100%;
    // overflow: auto;
    // overflow-y: hidden;
    // height: 100%;
    // overflow: auto;
  }

  .row-items, .block-items {
    transform-origin: top left;
  }

  svg {
    position: absolute;
    size: 100%;
  }

  .rows {
    // position: absolute;
    // top: 0;
    // left: 0;
    // bottom: 0;
    // right: 0;
    // z-index: -1;
    transform-origin: top left;

    .row-items:after {
      clear: both;
      content: "";
      display: table;
    }
  }

  .row {
    background-color: #F5F5F5;
    height: (20em/13);
    margin: (6em/13) 0 0;

    &:first-child {
      margin-top: 0;
    }

    &:last-child {
      margin-bottom: (20em/13);
    }
  }

  .labels {
    // flex: 0 0 auto;
    position: absolute;
    top: 0;
    left: 0;
    // overflow-y: auto;
    // overflow-x: hidden;
    z-index: 2;
    pointer-events: none;
    transform-origin: top left;
  }

  .label-item {
    background-color: rgba(#F5F5F5, 0.9);
    height: (20em/13);
    line-height: (20em/13);
    margin: (6em/13) 0;
    padding: 0 (10em/13);
    overflow: hidden;
    max-width: (130em/13);
    text-align: right;
    text-overflow: ellipsis;
    white-space: nowrap;

    &:first-child {
      margin-top: 0;
    }
  }

  .blocks {
    // flex: 1 1 auto;
    // transition: flex 1000ms linear;
    overflow: auto;
    overflow-y: hidden;
    // position: absolute;
    // top: 0;
    // right: 0;
    // bottom: 0;
    // left: 0;
    // transform-origin: top left;
    // min-height: 100%;
    // transition: padding 1.1s;
    // position: relative;

    .wrapper {
      // position: relative;
    }
  }

  .block-items {
    position: relative;
    // height: 100%;
    // width: 100%;

    &.zooming .block-item {
      transition: none !important;
    }
  }

  .block-item {
    background-color: #f5f5f5;
    border-radius: (2em/13);
    border: (5em/13) solid transparent;
    box-sizing: border-box;
    cursor: pointer;
    position: absolute;
    // height: 18px;
    // width: 18px;
    transition: background-color 250ms, border-color 250ms;
    z-index: 1;

    &:hover, &.floating {
      background-color: #999 !important;
      border-color: #999 !important;
    }

    &.filtered {
      background-color: #ccc !important;
      border-color: #ccc !important;
    }
  }

  .block-item-label {
    background-color: transparent;
    border: none;
    color: $gray;
    transition: none;
    margin-left: (5em/13);
    white-space: nowrap;

    &:hover {
      background-color: inherit !important;
    }
  }
}

@keyframes block-item-label {
  0%:   { opacity: 1; }
  50%:  { opacity: 0; }
  100%: { opacity: 1; }
}
