#import {
  display: flex;
  flex-direction: column;
	font-size: 16px;
  height: 100%;
  width: 100%;

	[role="banner"] {
		background-image: url('banner.svg');
		color: initial;
		overflow: hidden;
    flex: 0 0 auto;
		padding: 70px 40px;
		position: relative;
		text-align: center;

		&:before {
			absolute: bottom left;
			background: linear-gradient(to bottom, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1));
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			height: 100%;
			width: 100%;
			z-index: 0;
		}

		* {
			position: relative;
			z-index: 1;
		}

		h2 {
		  font-weight: 300;
		}
	}

  .forms {
    flex: 1 1 auto;
  }

	form {
		box-sizing: border-box;
		float: left;
		padding: 60px;
		text-align: center;
		width: 50%;

		+ form {
			border-left: 2px solid $lightgray;
		}

    .input-group {
      appearance: none;
      border: none;
      display: table;
      table-layout: fixed;
      margin: 0;
      padding: 0;
      width: 100%;

      .input-group-btn {
        display: table-cell;
        position: relative;
        vertical-align: middle;
        white-space: nowrap;
        width: 1%;
      }
    }

		input[type="file"] {
			display: none;
		}

    input[type="url"] {
      border: 2px solid $lightgray;
      border-top-left-radius: 3px;
      border-bottom-left-radius: 3px;
      box-sizing: border-box;
      display: table-cell;
      float: left;
      outline: none;
      margin: 0;
      padding: 7px 10px 5px;
      position: relative;
      width: 100%;

      &:focus {
        border-color: $gray;
        z-index: 1;
      }
    }

    input[type="submit"] {
      appearance: none;
      background: none;
      border: 2px solid $lightgray;
      border-top-right-radius: 3px;
      border-bottom-right-radius: 3px;
      border-left: 0;
      margin: 0;
      padding: 7px 10px 5px;
      position: relative;

      &:hover {
        background-color: $trout;
        border-color: $trout;
        color: $white;
      }
    }
	}

  footer {
    color: $gray;
    flex: 0 0 auto;
    margin-bottom: 80px;

    a {
      color: $trout;
      font-weight: 500;
      opacity: 0.5;
      text-decoration: none;

      &[href] {
        opacity: 1;
      }

      &:hover {
        opacity: 0.8;
      }
    }
  }
}
